# Copa Litoral Backend - Docker Environment Configuration
# Copia este archivo a .env y ajusta los valores según tu entorno

# Configuración del servidor
PORT=8080
API_PORT=8080
GIN_MODE=release
ENVIRONMENT=production

# Configuración de base de datos
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tu_password_seguro_aqui
DB_NAME=copa_litoral
DB_SSLMODE=disable

# Configuración de base de datos de pruebas
TEST_DB_HOST=postgres
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=tu_password_seguro_aqui
TEST_DB_NAME=copa_litoral_test

# JWT Configuration
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_minimo_32_caracteres

# CORS Configuration - Ajustado para tu dominio
CORS_ALLOWED_ORIGINS=https://apicopalitoral.hotusoft.com,https://www.apicopalitoral.hotusoft.com,http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_ENABLED=true

# Email Configuration (opcional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=noreply@apicopalitoral.hotusoft.com
EMAIL_USERNAME=tu_email@gmail.com
EMAIL_PASSWORD=tu_app_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# Security
HTTPS_REDIRECT=true
SECURE_HEADERS=true

# Timeouts
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s
